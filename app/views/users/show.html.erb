<h1>User Info</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <p><h3><%= @user.name %></h3></p>
    <p><h3><%= @user.email %></h3></p>
    <h2>My hosted events</h2>
    <table>
      <% if @my_events.any? %>
        <% @my_events.each do |event| %>
          <%= render 'event', event: event %>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
