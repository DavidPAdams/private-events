<h1>Event Info</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <p><h3><%= @event.detail %></h3></p>
    <p><h3><%= @event.description %></h3></p>
    <p><h3>Hosed by: <%= User.find(@event.creator_id).name %></h3></p>
    <% if @event.attendees.any? %>
      <% @event.attendees.each do |attendee| %>
        <ul>
          <li><%= attendee.name %></li>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>
